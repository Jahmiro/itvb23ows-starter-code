pipeline {
    agent { label '!windows' }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Building..."'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('../') {
                    sh 'composer install'
                }
            }
        }
        stage('PHPUnit') {
            steps {
                dir('../') {
                    sh './vendor/bin/phpunit --configuration phpunit.xml'
                }
            }
        }
        stage('SonarQube') {
            steps {
                script { scannerHome = tool 'scanner-sonar' }
                withSonarQubeEnv('SonarQube') {
                    sh "${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=ows-sonarqube"
                }
            }
        }
    }
}
