pipeline {
    agent {label '!windows'}
    stages {
        stage('build') {
            steps {
                sh 'echo "Building..."'
            }
        }
        stage('SonarQube') {
            steps {
                script { scannerHome = tool 'scanner-sonar' }
                withSonarQubeEnv('SonarQube') {
                    sh "${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=ows-sonarqube"
                }
            }
        }
        stage('PHPUnit') {
            steps {
                dir('..') {
                    sh 'composer update'
                    sh './vendor/bin/phpunit --configuration phpunit.xml'
                }
            }
        }
    }
}


